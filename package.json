{
  "name": "winnerforce-spark-server",
  "version": "1.0.0",
  "description": "Backend server for Winnerforce Spark media and marketing management platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration --runInBand",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:clearCache": "jest --clearCache",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run",
    "init-integrations": "node scripts/initializeIntegrations.js",
    "update-integrations": "node scripts/updateIntegrations.js",
    "generate-encryption-key": "node scripts/generateEncryptionKey.js",
    "validate-env": "node scripts/validateEnv.js",
    "test-integrations": "node scripts/testIntegrations.js",
    "postinstall": "chmod +x node_modules/.bin/nodemon || true"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "helmet": "^7.2.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "socket.io": "^4.7.2",
    "winston": "^3.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "cypress": "^15.3.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "media",
    "marketing",
    "management",
    "platform"
  ],
  "author": "Winnerforce",
  "license": "MIT"
}
